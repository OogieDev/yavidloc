{{ header }}
<section class="content article">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumbs">
                    {% for breadcrumb in breadcrumbs %}
                        {% if loop.last == false %}
                            <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }} </a><span class="breadcrumbs__delimiter">></span>
                        {% else %}
                            <span>{{ breadcrumb.text }}</span>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="article__wrapper">
                    <time>{{ article.post_date }}</time>
                    <h1>{{ article.title }}</h1>
                    <div class="article__content">
                        {{ article.content }}
                    </div>
                    <a class="social-icon facebook" title="Поделиться вконтакте" href="https://www.facebook.com/sharer.php?u={{ article.url }}&caption={{ article.title }}&picture={{ article.img }}" target="_blank">
                        <i class="fa fa-facebook"></i>
                    </a>
                    <a class="social-icon vk" title="Поделиться в facebook" href="https://vk.com/share.php?url={{ article.url }}&img={{ article.img }}&title={{ article.title }}" target="_blank">
                        <i class="fa fa-vk"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
{{ footer }}