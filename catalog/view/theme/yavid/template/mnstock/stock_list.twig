{{ header }}
<section class="content blog">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumbs">
                    {% for breadcrumb in breadcrumbs %}
                        {% if loop.last == false %}
                            <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }} </a><span class="breadcrumbs__delimiter">></span>
                        {% else %}
                            <span>{{ breadcrumb.text }}</span>
                        {% endif %}
                    {% endfor %}
                </div>
                <h1>Акции</h1>
                <div class="second-line"></div>
                <p class="blog__subtitle">Изысканность и утончённость классических и современных кухонь Yavid создадут неповторимый уют в вашем доме. А элементы кухни из массива дуба наполняют мебель теплом души и приносят в дом частичку природы.</p>
            </div>
            <div class="col-12 blog__articles">
                {% if stock %}
                    {% for item in stock %}
                        <div class="row ml-0 mr-0 blog__article">
                            <div class="col-md-6 pl-0">
                                <div class="blog__article__image">
                                    <img src="{{ item.image }}" alt="">
                                </div>
                            </div>
                            <div class="col-md-6 blog__article__right">
                                <time class="blog__article__right-date">{{ item.post_date }}</time>
                                {% if item.url  %}
                                    <a href="/{{ item.url }}" class="blog__article-title">
                                        <h4>{{ item.title }}</h4>
                                    </a>
                                {% else %}
                                    <a href="/akcii?stock_id={{ item.stock_id }}" class="blog__article-title">
                                        <h4>{{ item.title }}</h4>
                                    </a>
                                {% endif %}
                                <article>
                                    <p>{{ item.short_description }}</p>
                                </article>
                                <div class="button-wrapper">
                                    {% if item.url  %}
                                        <a href="/{{ item.url }}" class="mnbtn o-black">
                                            Подробнее
                                        </a>
                                    {% else %}
                                        <a href="/akcii?stock_id={{ item.stock_id }}" class="mnbtn o-black">
                                            Подробнее
                                        </a>
                                    {% endif %}

                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}

